<?php
define('HOST','localhost');
define('USER','root');
define('PASS','root');
define('DB','Other');
 
$con = mysqli_connect(HOST,USER,PASS,DB);
 
$sql = "select * from City_Events";
 
$res = mysqli_query($con,$sql);
 
$result = array();
 
while($row = mysqli_fetch_array($res)){
array_push($result,
array('city_name'=>$row[0],
'event'=>$row[1],
'venue'=>$row[2],
'price'=>$row[3]
));
}
 
echo json_encode(array("result"=>$result));
 
mysqli_close($con);
 
?>
